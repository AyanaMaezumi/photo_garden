<% if customer_signed_in? %>
  <div class="box1">
    <h3>検索</h3>

    <hr class="hr1">

    <%= form_with scope: :photo, url: photos_path, method: 'get' do |f| %>

      <%= f.radio_button :radio, :camera %>カメラ名
      <br>
      <%= f.radio_button :radio, :editing_app %>加工アプリ名
      <br>

      <%= f.text_field :search_name, class: "search_field"%>

      <%= f.submit '検索' %>
      <br>

    <% end %>

    <hr class="hr1">
    <!--type:に'camera'というパラメーターを渡している。その後は、photo_controllerのtype_searchアクションに飛ぶ-->
    <%= link_to 'カメラ名一覧', photo_type_search_path(type: 'camera') %>
    <br>
    <%= link_to '加工アプリ名一覧', photo_type_search_path(type: 'editing') %>

    <hr class="hr1">

    <h6>タグ検索</h6>

    <%= form_with scope: :photo, url: photos_path, method: 'get' do |f| %>

      <%= f.text_field :search_name, class: "search_field" %>

      <%= f.submit '検索' %>
      <br><br>

    <% end %>

    <% @tag_rankings.each do |tag_ranking| %>
      <%= link_to tag_ranking.name, (photos_path(type: 'tag', id: tag_ranking.id )) %>
    <% end %><br><br>


    <%= link_to 'タグ名一覧', photo_type_search_path(type: 'tag') %>

  </div>

<% end %>
