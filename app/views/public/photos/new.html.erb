<!--バリデーションエラーが発生したら以下を表示-->
<% if @photo.errors.any? %>
  <%= @photo.errors.count %>件のエラーが発生しました
  <% @photo.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>写真新規投稿</h1>

<%= form_with model: @photo, url: photos_path do |f| %>

  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>使用カメラ</h4>
  <%= f.text_field :camera_tags %>

  <h4>使用加工アプリ</h4>
  <%= f.text_field :editing_app_tags %>

  <h4>投稿者コメント</h4>
  <%= f.text_area :introduction %>

  <h4>タグ</h4>
  <%= f.text_field :name_tags %>

  <%= f.submit '新規投稿' %>

<% end %>