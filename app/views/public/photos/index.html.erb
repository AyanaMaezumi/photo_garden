<div class="container">
  <div class="row">
    <% if customer_signed_in? %>
    
      <div class="col-sm-3">
        <%= render 'list' %>
      </div>

      <div class="col-sm-9">
        <h2>写真一覧（検索結果（全<%= @photos.count %>件））</h2>
        
        <div class="row">
          <% @photos.each do |photo| %>
            <div class="col-lg-4 col-md-6 col-sm-12 my-2">
              <div class="card">
                <div class="p-2">
                  <!-- 写真 -->
                  <%= link_to photo_path(photo.id) do %>
                    <%= image_tag photo.get_image(400,400), class: "card-img-top img-thumbnail w-100" %>
                  <% end %>
                </div>
                <div class="card-body">
                  <sapan class="p-3">
                    <%= image_tag photo.customer.get_image(200,200), class: "rounded-circle img-thumbnail", size: '70x70' %>
                  </sapan>
                  <sapan>
                    <%= link_to customer_path(photo.customer.id) do %>
                      <span class="photo-nickname"><i class="fas fa-user"></i> By <%= photo.customer.nickname %></span>
                    <% end %><br>
                  </sapan>
                </div> 
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
  
      <div class="col-12">
        <h2>写真一覧</h2>

        <div class="row">
          <% @photos.each do |photo| %>
            <div class="col-md-4 col-sm-6 my-2">
              <div class="card">
                <div class="p-2">
                <!-- 写真 -->
                  <%= image_tag photo.get_image(400,400), class: "card-img-top img-thumbnail w-100" %>
                </div>
                <div class="card-body">
                  <sapan class="mr-3">
                    <%= image_tag photo.customer.get_image(200,200), class: "rounded-circle img-thumbnail", size: '70x70' %>
                  </sapan>
                  <span>
                    <span class="photo-nickname"><i class="fas fa-user"></i> By <%= photo.customer.nickname %></span>
                  </sapan>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <%= paginate @photos %>
</div>