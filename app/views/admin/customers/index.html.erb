<div class="container">

  会員一覧
  
  <table class="table">
    <thead class="table-light">
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>ステータス</th>
    </thead>
    
    <tbody>
      <% @customers.each  do |customers| %>
      
      <tr>
        <td><%= customers.id %></td>
        <td>
          <%= link_to admin_customer_path(customers.id) do %>
            <%= customers.nickname %>
          <% end %>
        </td>
        <td>
          <% if customers.is_deleted ==false %>有効
          <% else %>退会
          <% end %>
        </td>
      </tr>
      
      <% end %>
    </tbody>
  </table>
  
  <%= paginate @customers %>
  
</div>