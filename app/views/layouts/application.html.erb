<!DOCTYPE html>
<html>
  <head>
    <title>PhotoGarden</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <li>
          <%= link_to "投稿する",new_photo_path %>
        </li>
        <li>
          <%= link_to "マイページ",customer_path(current_customer.id) %>
        </li>
        <li>
          <%= link_to "写真一覧",photos_path %>
        </li>
        <li>
          <%= link_to "お気に入り一覧",favorite_photos_path %>
        </li>
        <li>
          <%= link_to "フォロー一覧",follow_members_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_customer_session_path %>
        </li>
      
      <% else admin_signed_in? %>
        <li>
          <%= link_to "写真一覧",admin_root_path %>
        </li>
        <li>
          <%= link_to "会員一覧",admin_customers_path %>
        </li>
        <li>
          <%= link_to "通報コメント一覧",admin_reports_path %>
        </li>
        <li>
          <%= link_to "ログアウト",destroy_admin_session_path %>
        </li>
      
      <% else %>
        <li>
          <%= link_to "About",about_path %>
        </li>
        <li>
          <%= link_to "写真一覧",photos_path %>
        </li>
        <li>
          <%= link_to "新規登録",new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン",new_customer_session_path %>
        </li>
        
    </header>
    
    <%= yield %>
  </body>
</html>
